<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.reis.hiddemcam.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />

        <action
            android:id="@+id/action_FirstFragment_to_VideoFragment"
            app:destination="@id/VideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.reis.hiddemcam.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    <fragment
        android:id="@+id/VideoFragment"
        android:name="com.reis.hiddemcam.VideoFragment"
        android:label="@string/video_fragment_label"
        tools:layout="@layout/fragment_video">

        <action
            android:id="@+id/action_Video_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>